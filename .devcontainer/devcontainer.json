{
  "name": "Native Web Servers Environment",
  "image": "ubuntu:22.04",
  
  // No additional features needed - we install everything via our scripts

  // Forward ports for web servers
  "forwardPorts": [8080, 8081, 8082, 8443, 8444, 8445, 22],
  
  // Port attributes
  "portsAttributes": {
    "8080": {
      "label": "Apache HTTP",
      "onAutoForward": "notify"
    },
    "8081": {
      "label": "Nginx HTTP", 
      "onAutoForward": "notify"
    },
    "8082": {
      "label": "Tomcat HTTP",
      "onAutoForward": "notify"
    },
    "8443": {
      "label": "Apache HTTPS",
      "onAutoForward": "notify"
    },
    "8444": {
      "label": "Nginx HTTPS",
      "onAutoForward": "notify"
    },
    "8445": {
      "label": "Tomcat HTTPS", 
      "onAutoForward": "notify"
    },
    "22": {
      "label": "SSH",
      "onAutoForward": "notify"
    }
  },

  // Run commands after container creation
  "postCreateCommand": "apt-get update && apt-get install -y sudo curl wget && chmod +x *.sh .devcontainer/*.sh && .devcontainer/setup.sh",
  
  // Commands to run after the container starts
  "postStartCommand": "echo 'Use ./manage-services.sh to manage your web servers!'",

  // VS Code extensions to install
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.powershell",
        "github.copilot"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n"
      }
    }
  },

  // Run as root to allow service installation
  "remoteUser": "root",

  // Mount the workspace
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Lifecycle scripts
  "onCreateCommand": "echo 'Setting up native web servers environment...'",
  
  // Environment variables
  "remoteEnv": {
    "WORKSPACE_NAME": "lnxservers",
    "AUTO_INSTALL": "false"
  }
}
